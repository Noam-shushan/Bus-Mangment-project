<Window x:Class="PLGui.StationViewInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLGui"
        mc:Ignorable="d"
        Title="Station Info" Height="450" Width="600">
    <Grid>
        <StackPanel>
        <TextBlock 
            x:Name="textBoxStationInfo" 
            Margin="20"
            HorizontalAlignment="Left"/>
        <ListView 
            x:Name="lvLinesPassBy"
            ItemsSource="{Binding}"
            MouseDoubleClick="lvLinesPassBy_MouseDoubleClick"
            Margin="20,0,0,0"
            Width="200"
            HorizontalAlignment="Left">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn 
                            Header="Line number"
                            DisplayMemberBinding="{Binding Path=Code}"
                            Width="80"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
        </StackPanel>
    </Grid>
</Window>
