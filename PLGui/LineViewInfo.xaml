<Window x:Class="PLGui.LineViewInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLGui"
        mc:Ignorable="d"
        Title="LineViewInfo" Height="450" Width="500">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="textBlockLineInfo" 
                       HorizontalAlignment="Center"
                       FontSize="20"/>
            <TextBlock x:Name="textBlockArea"
                       FontSize="15"
                       Margin="20,0,0,5"/>
            <TextBlock Text="Line stations:" FontSize="15" Margin="20,0,5,0"/>
            <ListView Name="lbLineStations"  
                      ItemsSource="{Binding}"
                      Width="300"
                      Margin="20,0,0,20"
                      HorizontalAlignment="Left">
                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Station}"
                                            Header="Station Code" Width="150">
                            </GridViewColumn>
                            <GridViewColumn DisplayMemberBinding="{Binding Path=LineStationIndex}"
                                            Header="Station number" Width="150">
                            </GridViewColumn>
                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
