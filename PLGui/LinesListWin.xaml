<Window x:Class="PLGui.LinesListWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLGui"
        mc:Ignorable="d"
        Title="Lines" Height="400" Width="600">
    <Grid>
        <ListView x:Name="lvLineList"
                  ItemsSource="{Binding}"
                  Margin="20"
                  Width="200"
                  HorizontalAlignment="Left"
                  MouseDoubleClick="lvLineList_MouseDoubleClick"
                  >
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Line Number" 
                                        DisplayMemberBinding="{Binding Path=Code}">
                        </GridViewColumn>
                        <GridViewColumn Header="Area" 
                                        DisplayMemberBinding="{Binding Path=Area}">
                        </GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
